{
  "manifest_version": 2,
  "name": "incrementoot",
  "description": "Update display name at tooting",
  "version": "2.0",
  "homepage_url": "https://github.com/choco-la/incrementoot",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "applications": {
    "gecko": {
      "strict_min_version": "57.0a1",
      "id": "incrementoot@example.com",
      "update_url": "https://choco-la.github.io/incrementoot/update.json"
    }
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "https://friends.nico/web/*",
    "https://pawoo.net/web/*",
    "https://mstdn.jp/web/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://friends.nico/web/*",
        "https://pawoo.net/web/*",
        "https://mstdn.jp/web/*"
      ],
      "js": [
        "init.js"
      ]
    }
  ]
}